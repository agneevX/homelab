[Unit]
Description=rclone drive daemon
After=network-online.target

[Service]
Type=notify
Environment=RCLONE_ALLOW_OTHER=true
Environment=RCLONE_DIR_CACHE_TIME=1000h
Environment=RCLONE_POLL_INTERVAL=15s
Environment=RCLONE_USE_MMAP=true
Environment=RCLONE_RC_ENABLE_METRICS=true
Environment=RCLONE_RC_ADDR=0.0.0.0:5800
Environment=RCLONE_EXCLUDE=crypt/**

ExecStart=/usr/bin/rclone mount drive: /mnt/rc-drive \
	--vfs-read-chunk-size 64M \
	--vfs-read-chunk-size-limit 128M \
	--buffer-size 100M \
	--rc
ExecStartPost=/usr/bin/rclone rc vfs/refresh recursive=true _async=true --rc-addr ${RCLONE_RC_ADDR}
ExecStop=/bin/fusermount -uz /mnt/rc-drive

Restart=on-failure
RestartSec=20
User=agneev
Group=agneev
SyslogIdentifier=rc-drive

[Install]
WantedBy=multi-user.target