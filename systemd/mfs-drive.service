[Unit]
Description = mergerFS rclone drive-crypt mount

[Service]
Type = forking
ExecStart=/usr/bin/mergerfs \
	/home/agneev/drive-local:/mnt/rc-drive:/mnt/rc-crypt:/mnt/oc1-drive \
	/mnt/mfs-drive \
	-o defaults \
	-o allow_other \
	-o use_ino \
	-o func.getattr=newest \
	-o dropcacheonclose=true \
	-o cache.files=auto-full \
	-o category.action=all \
	-o category.create=ff \
	-o fsname=mfs-drive

ExecStop = /bin/fusermount -uz /mnt/mfs-drive

[Install]
WantedBy = multi-user.target